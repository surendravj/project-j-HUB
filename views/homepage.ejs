<div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Write to us</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/donar/details" method="post">
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fas fa-user prefix grey-text"></i>
                        <input type="text" required id="form34" name="name" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="form34">Your name</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-tag prefix grey-text"></i>
                        <input type="text" required id="form31" name="contactnumber" class="form-control validate">
                        <label data-error="wrong" data-success="right" for="form31">Contact No</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-tag prefix grey-text"></i>
                        <input type="text" required id="form32" name="presentlocation" class="form-control validate">
                        <label for="form32">Present Location</label>
                    </div>
                    <div class="md-form mb-5">
                        <i class="fas fa-tag prefix grey-text"></i>
                        <input type="text" required name="medicalstatus" id="form33" class="form-control validate">
                        <label for="form33">Present Medical-Status</label>
                    </div>
                    <div class="" md-form mb-5"0">
                        <label for="form10">Your Blood Type</label>
                        <select name="bloodgroup" id="form100" class="form-control">
                            <option value="select">Select</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A+</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>

                    </div>
                    <div class="" md-form mb-5"0">
                        <label for="form10">Have you donated blood </label>
                        <select name="donate" id="form100" class="form-control">
                            <option value="select">Select</option>
                            <option value="Not">Not Donated Blood</option>
                            <option value="1 month">1 Month</option>
                            <option value="2 month">2 Month</option>
                            <option value="3 month">3 Month</option>
                        </select>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-unique" type="submit">Become A Donar<i
                                class="fas fa-paper-plane-o ml-1"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- section for blood search -->
